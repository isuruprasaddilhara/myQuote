<%# =============================================================== %>
<%# Application Layout File (app/views/layouts/application.html.erb) %>
<%# This is the main layout template for the MyQuote application.   %>
<%# It defines the global HTML structure, page head, and includes   %>
<%# shared components like the navigation header and Bootstrap setup. %>
<%# =============================================================== %>

<!DOCTYPE html>
<html>
  <head>
    <%# ---------- Page Metadata and Title Section ---------- %>
    <%# Sets the dynamic page title (using 'content_for :title' if defined, otherwise defaults to "My Quote"). %>
    <title><%= content_for(:title) || "My Quote" %></title>

    <%# Ensures proper scaling and responsiveness on mobile and desktop browsers. %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <%# Adds essential Rails security tokens to prevent CSRF and enforce Content Security Policy. %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# ---------- External CSS and JS Libraries ---------- %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

    <%# ---------- Optional Page-Specific Head Content ---------- %>
    <%# Allows individual pages to inject additional head elements (e.g., custom scripts or meta tags). %>
    <%= yield :head %>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%= render 'layouts/header' %> <%# Renders the shared navigation header (stored in layouts/_header.html.erb). %>
  <div class="container mt-2 mb-2"> <%# keep the page margin in every page %>
    <%= yield %> <%# Injects page-specific content (from each view) into the layout body. %>
  <div>
  </body>
</html>
