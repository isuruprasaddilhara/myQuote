<%= form_with(model: philosopher, local: true, class: "p-4 bg-white shadow rounded") do |form| %>
  <% if philosopher.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(philosopher.errors.count, "error") %> prohibited this philosopher from being saved:</h4>
      <ul>
        <% philosopher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :fname, "First Name", class: "form-label" %>
    <%= form.text_field :fname, class: "form-control", placeholder: "Enter first name" %>
  </div>

  <div class="mb-3">
    <%= form.label :lname, "Last Name", class: "form-label" %>
    <%= form.text_field :lname, class: "form-control", placeholder: "Enter last name" %>
  </div>

  <div class="mb-3 row">
    <div class="col">
      <%= form.label :birth_year, "Birth Year", class: "form-label" %>
      <%= form.number_field :birth_year, class: "form-control", placeholder: "YYYY" %>
    </div>
    <div class="col">
      <%= form.label :death_year, "Death Year", class: "form-label" %>
      <%= form.number_field :death_year, class: "form-control", placeholder: "YYYY" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :short_bio, "Short Biography", class: "form-label" %>
    <%= form.text_area :short_bio, class: "form-control", rows: 5, placeholder: "Write a brief bio" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save Philosopher", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
