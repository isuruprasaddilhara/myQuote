<% content_for :title, "Quotes" %> <%# Sets the page title to "Quotes" for use in the application layout %

<%# Main heading for the Quotes page %>
<h1 class="mb-4">Quotes</h1>

<%# Display a success message (notice) if available — usually shown after create, update, or delete actions %>
<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<%# Container for displaying all quote cards in a responsive grid layout %>

<%# Iterate through each quote object in @quotes collection passed from the controller %>
<div id="quotes" class="row row-cols-1 row-cols-md-2 g-4">
  <% @quotes.each do |quote| %>
    <div class="col">
      <div class="card mb-3">
        <div class="card-body">
          <%# Display a truncated version of the quote text (limited to 80 characters) as the card title %>
          <h5 class="card-title"><%= truncate(quote.quote_text, length: 80) %></h5>

          <%# If the quote is linked to a philosopher, display the philosopher’s last name %>
          <% if quote.philosopher %>
            <p class="card-text text-muted">
              <strong>Philosopher:</strong> <%= quote.philosopher.lname %>
            </p>
          <% end %>
          <p class="card-text"><%= quote.comment %></p>  <%# Display the comment or additional note associated with the quote %>
          <p class="mb-2">
            <span class="badge bg-info text-dark">Year: <%= quote.published_year %></span>
            <% quote.categories.each do |category| %>
              <span class="badge bg-secondary"><%= category.category_name %></span>
            <% end %>
            <% if quote.is_public %>
              <span class="badge bg-success">Public</span>
            <% else %>
              <span class="badge bg-warning text-dark">Private</span>
            <% end %>
          </p>
          <div class="d-flex justify-content-between">
            <%= link_to "Show this quote", quote, class: "btn btn-outline-primary btn-sm" %>
            <% if quote.user == current_user %>
              <%= link_to "Edit", edit_quote_path(quote), class: "btn btn-outline-secondary btn-sm" %>
              <%= button_to "Delete this quote", quote, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm ms-2" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if logged_in? %>
  <div class="mt-4">
    <%= link_to "Add New quote", new_quote_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>