
<h3 style="padding-top: 10px;">Search for Public Quotes</h3>
<%= form_tag search_path, method: :get do %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :query, params[:query], placeholder: 'Enter a keyword...', class: "form-control" %>
  </div>
  <%= submit_tag 'Search', class: "btn btn-primary" %>
<% end %>

<% if params[:query].present? %>
  <h4 style="padding-top: 15px;">Results:</h4>
  <% if @quotes.present? %>
    <% @quotes.each do |quote| %>
      <div class="card bg-light" style="margin-bottom: 10px">
        <div class="card-body">
          <p class="card-text">"<%= quote.quote_text %>"</p>
          <% if quote.philosopher.present? %>
            <footer class="blockquote-footer"><%= quote.philosopher.fname %> <%= quote.philosopher.lname %></footer>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No matching public quotes found.</p>
  <% end %>
<% end %>
